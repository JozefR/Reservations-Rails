<p id="notice"><%= notice %></p>


<div class="wrapper">
  <div class="container">

    <header>
      <div class="page-header">
        <h1>Our Rooms
          <br>
          <small>Here can you find our available rooms.</small>
        </h1>
      </div>
    </header>

    <ol class="breadcrumb">
      <li class="breadcrumb-item">
        <%= link_to 'Home', buildings_path %>
      </li>
      <li class="breadcrumb-item active">Rooms</li>
    </ol>

    <div class="row">
      <div class="col-md-6">
        <div class="thumbnail">

          <% @rooms.each do |room| %>
            <div class="caption">
              <h3>
                <%= link_to room.title, lessons_path(room_id: room.id)  %>
              </h3>
            </div>
          <% end %>
        </div>
      </div>
  </div>
</div>
</div>